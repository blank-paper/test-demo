
@using Demo.Model;
@model List<Student>;
@{
	ViewData["Title"] = "Home Page";

	//var students = ViewData["Students"] as List<Student>;
	var students = Model;
}

	<div class="row" style="margin-top:10px">

		<div class="col-xs-12">
			<h4 class="page-header">我是学生列表页面</h4>
		</div>

		<div class="col-xs-12">
			<div class="box ui-draggable ui-droppable" style="top: 0px; left: 0px; opacity: 1; z-index: 1999;">
				<div class="box-header">
					<div class="box-name">
						<i class="fa fa-table"></i>
						<span>Combined Table</span>
					</div>
					<div class="box-icons">
						<a class="collapse-link">
							<i class="fa fa-chevron-up"></i>
						</a>
						<a class="expand-link">
							<i class="fa fa-expand"></i>
						</a>
						<a class="close-link">
							<i class="fa fa-times"></i>
						</a>
					</div>
					<div class="no-move"></div>
				</div>
				<div class="box-content no-padding">
					<table class="table table-striped table-bordered table-hover table-heading no-border-bottom">
						<thead>
							<tr>
								<th>#</th>
								<th>学号</th>
								<th>名字</th>
								<th>年龄</th>
								<th>备注</th>
								<th>操作</th>
							</tr>
						</thead>
						<tbody>
							@for (int i = 0; i < students.Count; i++)
							{
								<tr>
									<td>@i</td>
									<td>@students[i].Id</td>
									<td>@students[i].Name</td>
									<td>@students[i].Age</td>
									<td>@students[i].Remark</td>
									<td>
										<button type="button" class="btn btn-Primary" onclick="showItem(@students[i].Id)">查看</button>
										<button type="button" class="btn btn-danger">删除</button>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<div class="box-content no-padding">
					<form method="post" action="">
						Name:<input type="text" name="name" />
						Age:<input type="text" name="age"/>

						<input type="submit" value="Save" />
					</form>
				</div>
			</div>
	</div>

@section MyScripts
{
	
	<script type="text/javascript">
		function showItem(id) {
			var url = '@Url.Action("Detail", "Student")' + '?id=' + id;
			location.href = url;
			//window.open(url);
		}

	</script>
}
